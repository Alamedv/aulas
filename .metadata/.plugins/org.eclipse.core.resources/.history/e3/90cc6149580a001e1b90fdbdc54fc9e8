		int n = sc.nextInt();
		
		for (int i=1; i<=n; i++) {
			System.out.println("Product #" + i + " data: \nCommon, used or imported (c/u/i)?");
		char ch = sc.next().charAt(0);
		System.out.println("Name: ");
		String name = sc.nextLine();
		sc.nextLine();
		System.out.println("Price: ");
		double price = sc.nextDouble();
		}
		
		
		
		
		
		sc.close();
	}

}
